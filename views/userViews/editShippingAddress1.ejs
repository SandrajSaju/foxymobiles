<%- include("../partials/userHeader.ejs") %>
<%- include("../partials/userNavs.ejs") %>
            
                                    <div class="col-lg-9 col-12 mt-5">
                                        <div class="row">
                                            <div class="col-12 mb-4">
                                                <div class="card mb-4">
                                                    <div class="card-header bg-black text-white text-center py-3">
                                                        <h5 class="mb-0">Biling details</h5>
                                                    </div>
                                                    <div class="card-body text-black">
                                                        <form action="/updateShippingAddress/<%= user._id %>?addressIndex=<%= addressIndex %>" method="post">
                                                            <!-- 2 column grid layout with text inputs for the first and last names -->
                                                            <div class="row mb-4">
                                                                <div id="liveAlertPlaceholder" >
                                                                    <% if(typeof message !== "undefined"){ %>
                                                                        <div class="alert alert-danger alert-dismissible w-50 d-block" role="alert">
                                                                              <div><%= message %></div>
                                                                              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                                            </div>
                                                                        <% } %>
                                                                </div>
                                                                <div class="col">
                                                                    <div class="form-outline">
                                                                        <input type="text" id="name" value="<%= order.shippingAddress[addressIndex].name %>"
                                                                            name="name" class="form-control" required>
                                                                        <label class="form-label"
                                                                            for="name">Name</label>
                                                                    </div>
                                                                </div>
                                                                <div class="col">
                                                                    <div class="form-outline">
                                                                        <input type="text" id="houseName" value="<%= order.shippingAddress[addressIndex].houseName %>"
                                                                            name="houseName" class="form-control" required>
                                                                        <label class="form-label"
                                                                            for="houseName">House Name</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                            
                                                            <!-- Text input -->
                                                            <div class="form-outline mb-4">
                                                                <input type="text" id="place" name="place" value="<%= order.shippingAddress[addressIndex].place %>"
                                                                    class="form-control" required>
                                                                <label class="form-label"
                                                                    for="place">Place</label>
                                                            </div>
                            
                                                            <!-- Email input -->
                                                            <div class="form-outline mb-4">
                                                                <input type="text" id="city" name="city" value="<%= order.shippingAddress[addressIndex].city %>"
                                                                    class="form-control" required>
                                                                <label class="form-label"
                                                                    for="city">City</label>
                                                            </div>
                            
                                                            <div class="form-outline mb-4">
                                                                <input type="text" id="district" name="district" value="<%= order.shippingAddress[addressIndex].district %>"
                                                                    class="form-control" required>
                                                                <label class="form-label"
                                                                    for="district">District</label>
                                                            </div>
                            
                                                            <!-- Number input -->
                                                            <div class="form-outline mb-4">
                                                                <input type="text" id="state" name="state" value="<%= order.shippingAddress[addressIndex].state %>"
                                                                    class="form-control" required>
                                                                <label class="form-label"
                                                                    for="state">State</label>
                                                            </div>
                            
                                                            <div class="form-outline mb-4">
                                                                <input type="text" id="pinCode" name="pinCode" value="<%= order.shippingAddress[addressIndex].pinCode %>"
                                                                    class="form-control" required>
                                                                <label class="form-label"
                                                                    for="pinCode">Pin Code</label>
                                                            </div>
                            
                                                            <div class="form-outline mb-4">
                                                                <input type="text" id="phoneNumber" name="phoneNumber" value="<%= order.shippingAddress[addressIndex].phoneNumber %>"
                                                                    class="form-control" required>
                                                                <label class="form-label"
                                                                    for="phoneNumber">Phone Number</label>
                                                            </div>
<div class="d-flex justify-content-center">
                                                            <button type="submit"
                                                                class="btn btn-outline-dark btn-lg btn me-2 ">
                                                               Save Changes
                                                            </button>
                                                            <a href="/shippingDetails/<%= cart.user._id %>" class="btn btn-dark btn-lg text-decoration-none btn  ">Cancel</a>
                                                            <!-- Checkbox -->
</div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div><!-- /.row -->
                                    </div>
                        </div>
                    </div>
                </div>
            </div>


            <%-include('../partials/userFooter.ejs') %>
    </body>

</html>