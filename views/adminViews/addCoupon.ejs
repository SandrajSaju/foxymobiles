<%- include('../partials/adminHeader.ejs')%>
      <body class="admin-body">
     <%- include('../partials/adminNavbar.ejs') %>
     <%- include('../partials/adminSidebar.ejs') %>

     <div style="background-color: aquamarine; height: 100vh;">
        <button style="margin-left: 10px; margin-top: 10px;" class="btn btn-primary"><a
                style="text-decoration: none; color: rgb(255, 255, 255);" href="/admin/coupons">Go Back</a></button>
        <div class="container-fluid h-100">
            <div class="row h-100">
                <div class="col-12 col-sm-8 col-md-6 m-auto">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <h4 style="color:rgb(64, 64, 218);" class="text-center">Add Coupon</h4>
                            <form action="/admin/addNewCoupon" method="post">
                                <input type="text" class="form-control my-3 py-2" name="code" placeholder="Coupon Code"
                                    required>
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Description" name="description" rows="3"
                                        required></textarea>
                                </div>
                                <div class="form-group">
                                    <select class="form-control my-3 py-2" name="discountType" required>
                                        <option value="Percentage">Percentage</option>
                                        <option value="Fixed">Fixed</option>
                                    </select>
                                </div>
                                <input type="tel" class="form-control my-3 py-2" name="discountValue"
                                    placeholder="Discount Value" required>
                                <input type="tel" class="form-control my-3 py-2" name="minimumOrderAmount"
                                    placeholder="Minimum Order Amount" required>
                                <input type="tel" class="form-control my-3 py-2" name="maximumDiscountAmount"
                                    placeholder="Maximum Discount Amount" required>
                                <div class="form-control my-3 py-2">
                                    <label for="validityStart">Validity Start:</label>
                                    <input type="date" name="validityStart" required>
                                </div>
                                <div class="form-control my-3 py-2">
                                    <label for="validityEnd">Validity End:</label>
                                    <input type="date" name="validityEnd" required>
                                </div>
                                <input type="tel" class="form-control my-3 py-2" name="usageLimit"
                                    placeholder="usageLimit" required>
                                <div class="text-center mt-3">
                                    <button type="submit" class="btn btn-primary">ADD</button>
                                    <% if(typeof message !=="undefined" ){ %>
                                        <br>
                                        <p style="color: red;">
                                            <%= message %>
                                        </p>
                                        <% } %>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="/scripts/adminScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"></script>
</body>

</html>